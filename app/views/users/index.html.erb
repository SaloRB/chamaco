<% provide(:user_active, 'active') %>

<p class="text-success" id="notice"><%= notice %></p>

<h1 class="display-4">Users</h1>

<table class="table table-striped text-secondary">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-sm btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-secondary" %></td>
        <td><%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>

    <% @users.each do |user| %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-sm btn-secondary" %>

<br>
<br>

<%= link_to 'Back', root_path, class: "btn btn-sm btn-secondary" %>
